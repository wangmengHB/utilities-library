{
  "compileOnSave": true,
	"compilerOptions": {
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictBindCallApply": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"downlevelIteration": true,
    	"baseUrl": ".",
		"paths": {
			"src/*": ["./src/*"],
			"vs/*": [
				"./src/vs/*"
			]
		},
		"moduleResolution": "node",	
		"preserveConstEnums": true, 
		"lib": [
			"dom",
			"es2020"
		],
		"module": "commonjs",
		"declaration": true,
		"target": "es5",
		"removeComments": false,
		"sourceMap": false, 
		"outDir": "./dist"
	},
	"include": [
		"./src/**/*",
		"./typings"
	],
	"exclude": [
		"node_modules/*"
	]
}
